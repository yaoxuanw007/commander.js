#!/usr/bin/env node

var path = require('path'),
    program = require('..');

program.version('0.0.1');

program.command('api <cmd>', 'api desc', {
      path: function (args) {
        return path.join(__dirname, 'api', args[1] + '.js');
      },
      bin: function (args) {
        return 'api ' + args[1];
      },
      help: function () {
        console.log("api help");
      },
      twoLevel: true
});

program.executables = false;

program.command('other')
  .description('other')
  .option('-v,--other-version [VERSION]', 'other version', 'v2')
  .action(function (options) {
    console.log(options);
  });

program.parse(process.argv);

// Try the following:
//   ./examples/api-custom api v1
//   ./examples/api-custom api v1 install -h
//   ./examples/api-custom api v1 install foo bar baz
//   ./examples/api-custom api v1 install foo bar baz --force
